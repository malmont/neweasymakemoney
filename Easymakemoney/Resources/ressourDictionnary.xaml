<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Style for StackLayout -->
    <Style TargetType="StackLayout" x:Key="HeaderStackLayoutStyle">
        <Setter Property="BackgroundColor" Value="#518faa"/>
        <Setter Property="Orientation" Value="Vertical"/>
        <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
        <Setter Property="VerticalOptions" Value="Start"/>
    </Style>

    <!-- Style for Image -->
    <Style TargetType="Image" x:Key="HeaderImageStyle">
        <Setter Property="Margin" Value="0,35,0,0"/>
        <Setter Property="Source" Value="logo.png"/>
        <Setter Property="Aspect" Value="AspectFit"/>
        <Setter Property="HeightRequest" Value="170"/>
    </Style>

    <!-- Style for Separator Image -->
    <Style TargetType="Image" x:Key="SeparatorImageStyle">
        <Setter Property="Source" Value="lab_separator.png"/>
        <Setter Property="Aspect" Value="AspectFill"/>
    </Style>

</ResourceDictionary>
